{
	"name": "vscode-tree-sitter",
	"displayName": "vscode-tree-sitter",
	"description": "Accurate syntax coloring with tree-sitter for VSCode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onLanguage:go"
	],
	"main": "./out/extension.js",
	"contributes": {
        "grammars": [
            {
                "language": "go",
                "scopeName": "source.go",
                "path": "./src/go.tmLanguage.json"
            }
        ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	}
}
